<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SecondActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="40dp">




        <ImageView
            android:id="@+id/instituteLogo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/splash_icon" />



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/instituteLogo"
            android:id="@+id/pinLayout"
            android:layout_marginTop="60dp">
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/pin1"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/edittext_bg"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:id="@+id/pin2"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_toEndOf="@id/pin1"
                android:background="@drawable/edittext_bg"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:id="@+id/pin3"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_toEndOf="@id/pin2"
                android:background="@drawable/edittext_bg"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:id="@+id/pin4"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_toEndOf="@id/pin3"
                android:background="@drawable/edittext_bg"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:id="@+id/pin5"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_toEndOf="@id/pin4"
                android:background="@drawable/edittext_bg"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/pin6"
                android:layout_toEndOf="@id/pin5"
                android:background="@drawable/edittext_bg"/>
        </RelativeLayout>



        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:inputType="phone"
            android:id="@+id/psuedoEditText"/>




        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pinLayout"
            android:layout_marginTop="50dp"
            android:id="@+id/verifyOtp"
            android:layout_centerHorizontal="true"
            android:text="@string/verify_otp"
            android:textSize="16sp"
            android:textStyle="bold" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resend_otp"
            android:textColor="@color/themeColor"
            android:textStyle="bold"
            android:textSize="20sp"
            android:id="@+id/resendOtp"
            android:layout_below="@id/verifyOtp"
            android:layout_marginTop="15dp"
            tools:visibility="visible"
            android:visibility="gone"/>



    </RelativeLayout>


</RelativeLayout>